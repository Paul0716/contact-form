<h3 class="title text-center">Contact Form</h3>

<div class="container">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 well well-sm">
        <%= form_tag :action => 'create' do %>
        <div class="form-group">
            <label>Title:</label>
            <%= text_field 'contacts', 'title', class: 'form-control', placeholder: "Subject" %>
        </div>
        <div class="form-group">
            <label>Name:</label>
            <%= text_field 'contacts', 'name', class: 'form-control', placeholder: "Your Name" %>
        </div>
        <div class="form-group">
            <label>Email:</label>
            <%= text_field 'contacts', 'email', class: 'form-control', placeholder: "Your Email Address" %>
        </div>
        <div class="form-group">
            <label>Phone:</label>
            <%= text_field 'contacts', 'phone', class: 'form-control', placeholder: "Your Phone Number" %>
        </div>
        <div class="form-group">
            <label>Message:</label>
            <%= text_area 'contacts','message', class: 'form-control', rows: 10, cols: 25, placeholder: "Leave Your Message Here." %>
        </div>
        <div class="row">
            <div class="col-sm-offset3 col-sm-3 col-xs-12">
                <%= show_simple_captcha %>
            </div>
        </div>    
        
        <!-- captcha -->
        <%= submit_tag "Clear", type: "reset", class: "btn btn-default" %>
        <%= submit_tag "Submit", type: "submit", class: "btn btn-primary" %>

        <% end -%>
    </div>
</div>