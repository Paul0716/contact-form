<% provide(:title, 'Sign up') %>
<div class="container">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 well well-sm">
        <%= form_for(@user, url: user_path(@user),  html: { class: "new_post", id: "new_post" })  do |f|  %>
        <div class="form-group">
            <label><%= f.label :name %></label>
            <%= f.text_field :name, class: 'form-control', placeholder: "Your Name" %>
        </div>
        <div class="form-group">
            <label><%= f.label :email %></label>
            <%= f.email_field :email, class: 'form-control', placeholder: "Your Eamil" %>
        </div>
        <div class="form-group">
            <label><%= f.label :password %></label>
            <%= f.password_field :password, class: 'form-control', placeholder: "Your Password" %>
        </div>
        <div class="form-group">
            <label for=""><%= f.label :password_confirmation, "Confirmation" %></label>
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password Confirm" %>
        </div>
        <%= f.submit "Sign up", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
